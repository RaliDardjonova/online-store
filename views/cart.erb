


<% if !session[:order_id] %>
<br>
<br>
<br>
    <h1 align="center">В момента количката ви е празна.</h1>
<% else %>
<h2 align="left" style="margin-left:5%">Вашата количка</h2>
<br>
<table class="products">
  <tr class="products">
    <th class="products">Модел</th>
    <th class="products">Категория</th>
    <th class="products">Пол</th>
    <th class="products">Цвят</th>
    <th class="products">Размер</th>
    <th class="products">Брой</th>
    <th class="products">Единична цена</th>
    <th class="products">Общо</th>
  </tr>
  <% order = Order.find(session[:order_id]) %>
  <% order.order_items.each do |order_item| %>
    <tr class="products">
        <td class="products"><strong><%= order_item.product.product_name %></strong></td>
        <td class="products"><%= order_item.product.type %></td>
        <td class="products"><%= order_item.product.gender %></td>
        <td class="products"><%= order_item.product.color %></td>
        <td class="products"><%= order_item.size %></td>
        <td class="products"><%= order_item.amount %></td>
        <td class="products"><%= order_item.unit_price %>лв</td>
        <td class="products"><%= order_item.total_price%>лв</td>
    </tr>
  <% end %>
  <tr class="products_bottom" style="background-color:white;">
    <td ></td>
    <td ></td>
    <td></td>
    <td ></td>
    <td ></td>
    <td ></td>
    <td class="products" style="background-color:#666699;color:white"><strong>Обща сума:</strong></td>
    <td class="products" style="background-color:#666699;color:white"><%= order.subtotal %>лв</td></tr>
</table>

<form style="margin-left:5%" method="post" action="/update_order">
  <button style="margin-left:0%;margin-top:30px;font-size:17px;padding: 14px 16px; background-color:#b30000;" type="submit" value="4" name="update_order" class="delete_button">Изтрий продуктите от количката</button>
  <button style="margin-left:75%;margin-top:30px;font-size:17px;padding: 14px 16px; background-color:green" type="submit" value="2" name="update_order" class="delete_button">Потвърди поръчката</button>
</form>
<%end%>

