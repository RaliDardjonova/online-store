<% if flash[:success] %>
    <p align="center" class="bg-success"><%= flash[:success] %></p>
<% end %>

<h3 align='center'>Добавяне на блузи</h3>
<form method="get"
      action="/add_chosen_product"
      class="container"
      style="width: 1100px;margin-left:0px;margin-bottom:0px">
      
    <div class="form-group"
         style="width: 200px; margin-left:53%; margin-top:0px">
        <label for="type-input">Изберете тип на продукта</label>
        <select name="type" onchange="this.form.submit()">
            <option value="Shoe">Обувки</option>
            <option value="Trouser">Панталони</option>
            <option value="Top" selected>Блузи</option>
        </select>
    </div>
</form>

<form method="post"
      action="/add_product"
      class="container"
      style="width: 700px">
    <div class="form-group">
        <input value="Top" name="type" type="hidden">
    </div>
    <div class="form-group">
        <label for="shoes-name-input">Наименование</label>
        <input id="shoes-name-input"
               class="form-control"
               name="shoes_name"
               type="string"
               maxlength="50"
               required>
    </div>
    <div class="form-group">
        <label for="description-input">Описание</label>
        <textarea id="description-input"
                  class="form-control"
                  name="description"
                  type="string"
                  required></textarea>
    </div>
    <div class="form-group" style="width: 200px">
        <label for="price-input">Цена</label>
        <input id="price-input"
               class="form-control"
               name="price"
               type="number"
               step="0.01"
               required>
    </div>
    <label for="size-input">Размер:</label>
    <div class="form-group" style="margin-left: 25px">
        <label for="size-input-min">От</label>
        <br>
        <input id="size-min-input"
               class="form-control"
               name="size_min"
               type="radio"
               value="1"
               checked>XS<br>
        <input id="size-min-input"
               class="form-control"
               name="size_min"
               type="radio"
               value="2">S<br>
        <input id="size-min-input"
               class="form-control"
               name="size_min"
               type="radio"
               value="3">M<br>
        <input id="size-min-input"
               class="form-control"
               name="size_min"
               type="radio"
               value="4">L<br>
        <input id="size-min-input"
               class="form-control"
               name="size_min"
               type="radio"
               value="5">XL<br>
        <input id="size-min-input"
               class="form-control"
               name="size_min"
               type="radio"
               value="6">XXL<br>
        <div style="margin-left:100px;margin-top:-145px;">
            <label for="size-input-max">До</label>
            <br>
            <input id="size-max-input"
                   class  ="form-control"
                   name="size_max"
                   type="radio"
                   value="1"
                   checked>XS<br>
            <input id="size-max-input"
                   class="form-control"
                   name="size_max"
                   type="radio"
                   value="2">S<br>
            <input id="size-max-input"
                   class="form-control"
                   name="size_max"
                   type="radio"
                   value="3">M<br>
            <input id="size-max-input"
                   class="form-control"
                   name="size_max"
                   type="radio"
                   value="4">L<br>
            <input id="size-max-input"
                   class="form-control"
                   name="size_max"
                   type="radio"
                   value="5">XL<br>
            <input id="size-max-input"
                   class="form-control"
                   name="size_max"
                   type="radio"
                   value="6">XXL<br>
        </div>
    </div>
    <div class="form-group">
        <label for="color-input">Цвят</label>
        <br>
        <input id="color-input"
               class="form-control"
               name="color"
               type="radio"
               value="white"
               checked>Бели<br>
        <input id="color-input"
               class="form-control"
               name="color"
               type="radio"
               value="yellow">Жълти<br>
        <input id="color-input"
               class="form-control"
               name="color"
               type="radio"
               value="orange">Оранжеви<br>
        <input id="color-input"
               class="form-control"
               name="color"
               type="radio"
               value="red">Червени<br>
        <input id="color-input"
               class="form-control"
               name="color"
               type="radio"
               value="pink">Розови<br>
        <input id="color-input"
               class="form-control"
               name="color"
               type="radio"
               value="purple">Лилави<br>
        <input id="color-input"
               class="form-control"
               name="color"
               type="radio"
               value="blue">Сини<br>
        <input id="color-input"
               class="form-control"
               name="color"
               type="radio"
               value="green">Зелени<br>
        <input id="color-input"
               class="form-control"
               name="color"
               type="radio"
               value="black">Черни<br>
        <input id="color-input"
               class="form-control"
               name="color"
               type="radio"
               value="grey">Сиви
    </div>
    <div class="form-group">
        <label for="gender-input">Пол</label>
        <br>
        <input id="gender-input"
               class="form-control"
               name="gender"
               type="radio"
               value="women"
               checked>Дамски<br>
        <input id="gender-input"
               class="form-control"
               name="gender"
               type="radio"
               value="men">Мъжки<br>
        <input id="gender-input"
               class="form-control"
               name="gender"
               type="radio"
               value="children">Детски<br>
        <input id="gender-input"
               class="form-control"
               name="gender"
               type="radio"
               value="unisex">Унисекс<br>
    </div>
    <div class="form-group">
        <label for="category-input">Категория</label>
        <br>
        <input id="category-input"
               class="form-control"
               name="category"
               type="radio"
               value="vest"
               checked>Потници<br>
        <input id="category-input"
               class="form-control"
               name="category"
               type="radio"
               value="T-shirts">Тениски<br>
        <input id="category-input"
               class="form-control"
               name="category"
               type="radio"
               value="long-sleeved">С дълъг ръкав<br>
        <input id="category-input"
               class="form-control"
               name="category"
               type="radio"
               value="shirt">Ризи<br>
        <input id="category-input"
               class="form-control"
               name="category"
               type="radio"
               value="sweater">Пуловери<br>
    </div>
    <div class="form-group" style="width: 200px">
        <label for="amount-input">Налично количество</label>
        <input id="amount-input"
               class="form-control"
               name="amount"
               type="number" required>
    </div>

    <button type="submit" class="btn btn-default">Запиши</button>
</form>
