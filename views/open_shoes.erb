<br>
<h1 align="left" style="margin-left:50px"><%= @shoe.shoes_name %></h1>


<h3 align="left" style="margin-left:50px">Коментари</h3>
<%comments = Comment.where product_id: @shoe.product_id %>
<table id="comments" class="comment">
  <% comments.each do |comment| %>
    <tr class="comment">
      <td class="comment_user"><strong><%=comment.user_name%></strong></td>
      <td class="comment"><%=comment.comment %></td>
      <% if session[:admin] == true %>
      <td class="comment">
        <form method="post" action="/delete_comment">
          <input type='hidden' value= "<%=comment.id%>" name="comment_id" >
          <button  type="submit" class="delete_button">Изтрий коментара</button>
        </form>
      </td>
      <%end%>
    </tr>
  <%end%>
</table>

<% if session[:user_name] %>
<br>
<br>
<form method="post" action="/add_comment">
  <div class="form-group" style="margin-left:50px;width: 85%;font-size:25px">
      <label for="comment-input">Напиши коментар</label>
      <textarea id="comment-input" class="form-control" name="comment" type="string" rows="10" required></textarea>
      <input id="product_id" class="form-control" name="product_id" type="hidden" value="<%= @shoe.product_id%>">
      <br>
      <button type="submit" class="btn btn-default">Изпрати коментара</button>
  </div>
</form>
<%end%>
